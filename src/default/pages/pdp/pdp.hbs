<h1>{{productName}}</h1>
<div class="productDesc">
	{{productDesc}}
</div>
<p class="productPrice">{{productPrice}}</p>
{{#if productPromotions}}
	<ul class="promotions">
		{{#each productPromotions}}
			<li>
				<a href="#">{{this}}</a>
			</li>
		{{/each}}
	</ul>
{{/if}}
<form action="/addToBasket" method="post">
	<label for="quantity">Quantity:</label>
	<input type="number" id="quantity" name="quantity"/>
	<button class="primaryButton" type="submit">Buy</button>
</form>
